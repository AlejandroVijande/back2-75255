<main class="container my-4">
  <h1 class="bg-primary-subtle p-2 text-center text-primary w-100 mb-4">My Cart</h1>
  <div id="cart-items">
    {{#if products}}
      {{#each products}}
        <div class="card mb-3 shadow-sm border-primary">
          <div class="card-body d-flex justify-content-between align-items-center">
            <span>
              <b>{{this.product.title}}</b> &ndash; Quantity: {{this.quantity}}
            </span>
            <button class="btn btn-danger btn-sm" onclick="removeFromCart('{{this.product._id}}')">Remove</button>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="alert alert-warning text-center">The cart is empty.</div>
    {{/if}}
  </div>
  <div class="d-flex justify-content-end gap-2 mt-3">
    <button id="clear-cart" class="btn btn-secondary">Empty Cart</button>
    <button id="checkout" class="btn btn-success">Checkout</button>
  </div>
</main>
<script src="/scripts/cart.js"></script>
